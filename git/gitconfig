[user]
	name = Moeen Tahir
	email = moeentahir@hotmail.com
[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[alias]
    # list all aliases
    la = "!git config -l | grep alias | cut -c 7-"
    a = add -p
    aa = add .
    s = status --short
    ss = status
    c = commit
    ca = commit --amend 
    cane = commit --amend --no-edit
    p = push
    pf = push -f
    pr = pull -r
    l = log --oneline
    ll = log --all --oneline --graph
    lll = log --all --graph
    deleted = "!git log --diff-filter=D --summary | grep delete"
    forget = "!git fetch -p origin && git branch -vv | awk '/: gone]/{print $1}' | xargs git branch -D"
[includeIf "gitdir/i:~/dev/"]
  path = ~/dev/.gitconfig
[includeIf "gitdir/i:~/dev/tw/"]
  path = ~/dev/tw/.gitconfig
[includeIf "gitdir/i:~/dev/work/"]
  path = ~/dev/work/.gitconfig
[includeIf "gitdir/i:~/dev/personal/"]
  path = ~/dev/personal/.gitconfig
[pull]
  rebase = true
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = blue bold 52
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
